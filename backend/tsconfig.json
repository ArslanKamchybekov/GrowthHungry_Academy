{
  "compilerOptions": {
    "baseUrl": "./", // Base URL for module resolution
    "lib": ["dom", "dom.iterable", "esnext"], // Libraries to include (like DOM, ESNext)
    "allowJs": true, // Allow JS files
    "skipLibCheck": true, // Skip type checking of library files
    "strict": true, // Enable all strict type checking options
    "noEmit": true, // Do not emit outputs
    "esModuleInterop": true, // Enable interop between ES and CommonJS modules
    "module": "esnext", // Use ESNext module system
    "moduleResolution": "bundler", // Bundle module resolution
    "resolveJsonModule": true, // Allow importing .json files
    "isolatedModules": true, // Isolate modules for speed
    "jsx": "preserve", // Preserve JSX as-is
    "incremental": true, // Enable incremental compilation for performance
    "emitDecoratorMetadata": true, // Enable decorator metadata for DI frameworks (like NestJS)
    "experimentalDecorators": true, // Enable experimental decorators
    "target": "ES6", // Change target to ES6 for modern JavaScript
    "plugins": [
      {
        "name": "next" // Plugin for Next.js
      }
    ],
    "paths": {
      "@/*": ["./src/*"] // Aliasing '@' to the 'src' folder for absolute imports
    }
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TSX files (React)
    ".next/types/**/*.ts" // Include types generated by Next.js
  ],
  "exclude": [
    "node_modules" // Exclude the node_modules directory
  ]
}
